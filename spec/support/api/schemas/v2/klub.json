{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "parent": {
      "type" : ["object", "null"],
      "required" : [
        "id",
        "type"
      ],
      "properties": {
        "id" : { "type": "string" },
        "type" : { "type": "string" }
      }
    }
  },

  "type": "object",
  "required": ["data"],
  "properties": {
    "data" : {
      "type" : "object",
      "required" : [
        "id",
        "type",
        "attributes"
      ],
      "properties": {
        "id" : { "type": "string" },
        "type" : { "type": "string" },
        "attributes": {
          "type": "object",
          "required": [
            "name",
            "address",
            "town",
            "website",
            "phone",
            "email",
            "latitude",
            "longitude",
            "notes",
            "categories"
          ],
          "properties": {
            "name" :      { "type": "string" },
            "address" :   { "type": ["string", "null"] },
            "town" :      { "type": ["string", "null"] },
            "website" :   { "type": ["string", "null"] },
            "phone" :     { "type": ["string", "null"] },
            "email" :     { "type": ["string", "null"] },
            "latitude" :  { "type": ["string", "null"] },
            "longitude" : { "type": ["string", "null"] },
            "facebook-url" : { "type": ["string", "null"] },
            "notes":      {"type": ["string", "null"] },
            "categories": {
              "type": "array",
              "items": [{
                "type": "string"
              }]
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "parent"
          ],
          "properties":  {
            "parent": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": { "$ref": "#/definitions/parent" }
              }
            }
          }
        }
      }
    }
  }
}
